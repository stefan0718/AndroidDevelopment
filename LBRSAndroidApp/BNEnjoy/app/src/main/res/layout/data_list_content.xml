<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dip"
    android:focusable="true"
    android:clickable="true"
    android:id="@+id/list_layout"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/data_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <View
            android:layout_width="50dip"
            android:layout_height="match_parent"
            android:background="@color/colorWhite" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/image_gradient_effect" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dip"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:id="@+id/data_layout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <project.myapplication.StrokedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/data_name"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="name" />
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:layout_marginLeft="-20dip"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="2dip"
                android:paddingBottom="2dip"
                android:id="@+id/data_star" />

            <project.myapplication.StrokedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="1dip"
                android:layout_marginRight="30dip"
                android:id="@+id/data_rating"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/colorPrimaryLightGrey"
                android:text="rating" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="2dip"
                android:paddingBottom="2dip"
                android:id="@+id/data_pricelevel" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:id="@+id/data_category"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryGrey"
            android:text="category" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/data_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="distance"
                android:textColor="@color/colorPrimaryLightGrey2"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:id="@+id/data_open_status"
                android:background="@drawable/textview_open_status_background"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryLightGrey"
                android:shadowColor="@color/colorWhite"
                android:shadowRadius="20"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:padding="8dip"
        android:layout_marginLeft="320dip"
        android:layout_marginTop="40dip"
        android:id="@+id/like_this_item"
        android:src="@mipmap/like" />

</RelativeLayout>